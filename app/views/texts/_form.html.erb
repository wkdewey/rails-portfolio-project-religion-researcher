<% if @text.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@text.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @text.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @text do |f| %>
  <%= hidden_field_tag "text[project_ids][]", @text.project_ids%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :subject %>
  <%= f.text_field :subject %>
  <br>
  
  <%= f.fields_for :author do |author| %>
    <%= author.label :id, "Existing author" %>
    <%= author.collection_select :id, @authors, :id, :name %>
    <%= author.label :name, "New author" %>
    <%= author.text_field :name %>
    
    <%= author.fields_for :religious_tradition do |r| %>
      <%= r.label :id, "Religious tradition" %>
      <%= r.collection_select :id, @religious_tradition, :id, :name %>
      <%= label_tag :new_name, "input new religious tradition" %>
      <%= text_field_tag  :new_name %>
    <% end %>
  <% end %>

  <%= f.fields_for :notes do |note| %>
    <% if note.object.project_id == @project %>
      <%= note.label :content %>
      <%= note.text_field :content %>
    <% end %>

  <% end %>
  <%= f.submit %>
<% end %>