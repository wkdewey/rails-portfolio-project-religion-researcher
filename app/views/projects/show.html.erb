<h1>Project: <%= @project.title %></h1>
<h2>Researcher: <%= link_to @project.researcher.name, researcher_path(@project.researcher) %></h2>
<h2>Description</h2>
<p> <%= @project.description %> </p>
<%= link_to "New Text", new_project_text_path(@project) %>
<h2>Texts</h2>
<% @project.texts.each do |text| %>
  <h1><%= link_to text.title, project_text_path(text) %></h1>
  <h2>by <%= text.author.name %></h2>
  <p>Notes: <%= text.get_note(@project) %></p>
  <%= link_to "edit", edit_project_text_path(@project, text) %>
  <hr>
<% end %>
<%= link_to "Edit project", edit_project_path %>