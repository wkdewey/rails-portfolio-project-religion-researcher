<%= form_for @note do |f| %>
  <%= f.label :text_id, "Choose a text" %>
  <%= f.collection_select :text_id, @texts, :id, :title %>
  <%= f.label :project_id, "Choose one of your projects" %>
  <%= f.collection_select :project_id, @projects, :id, :title %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>