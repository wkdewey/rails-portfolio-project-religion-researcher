<%= form_for @researcher do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :institution %>
  <%= f.text_field :institution %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>