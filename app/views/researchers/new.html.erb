<% if @researcher.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@researcher.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @researcher.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @researcher do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :institution %>
  <%= f.text_field :institution %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>